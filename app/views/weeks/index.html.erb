<div class="container">

  <h1>Listing Weeks</h1>

  <table>
    <thead>
      <tr>
        <th>Week</th>
        <th>day</th>
        <th>In</th>
        <th>Out</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @weeks.each do |week| %>
        

          <% week.day_logs.each do |day| %> 
          <tr>
            <td> <%=week.week_strat%></td>
            <td><%= day.day %></td>
            <td><%= day.time_in %></td>
            <td><%= day.time_out %></td>
          </tr>

         
            <td></td>
            <td><%= link_to 'Show', day %></td>
          <td><%= link_to 'Edit', edit_day_log_path(day) %></td>
          <td><%= link_to 'Destroy',day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
           <%end%>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New day', new_day_log_path %>
  <br>
  <%= link_to 'New Week', new_week_path %>
</div>